resource "aws_security_group" "rds-postgres" {
  name        = "dcp-query-${var.deployment_stage}-rds-postgres-sg"
  description = "DCP Query Service Postgres"
  vpc_id      = "${var.vpc_id}"

  ingress {
    from_port   = 5432
    to_port     = 5432
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
    description = "all"
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}
